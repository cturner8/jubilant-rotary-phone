---
import Layout from "../layouts/Layout.astro";

import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import AboutMe from "../components/AboutMe.astro";
import ProjectsCard from "../components/ProjectsCard.astro";
---

<script>
  import { animate, stagger, type AnimationSequence } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        type: "spring",
        at: "-0.1",
        delay: stagger(0.3),
      },
    ],
  ];

  animate(sequence as AnimationSequence);
</script>

<Layout
  description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Facilisi ornare litora primis tellus. Nec varius duis tempor cum. Tempor lacinia platea orci consectetur."
  title="Cameron Turner - Senior Software Engineer"
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <AboutMe />
    <ContactsCard />
    <Card
      colSpan="lg:col-span-2"
      rowSpan="md:row-span-2"
      title="Certifications"
    />
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-2" title="Now" />
    <Card
      colorText="text-neutral-900"
      colSpan="md:col-span-1"
      rowSpan="md:row-span-1"
      title="Interests"
    />
    <ProjectsCard />
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-1" title="Skills" />
  </main>
</Layout>
